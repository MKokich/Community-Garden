  <h1>community garden</h1>
  <h3>create a post</h3>
  <div class="col-4">
    <div class="form-floating mb-3">
      <input type="name" class="form-control" id="plantName" placeholder="name">
      <label for="floatingInput">plant name</label>
    </div>
    <div class="form-floating mb-3">
      <input type="username" class="form-control" id="description" placeholder="username">
      <label for="floatingInput">description</label>
    </div>

    <div class="form-floating mb-3">
      <input type="email" class="form-control" id="sun_requirement" placeholder="name@example.com">
      <label for="floatingInput">how much sun?</label>
    </div>
    <div class="form-floating mb-3">
      <input type="password" class="form-control" id="pet_safe" placeholder="Password">
      <label for="floatingPassword">is this plant pet safe?</label>
    </div>

    <div class="form-floating mb-3">
      <input type="password" class="form-control" id="edible" placeholder="Password">
      <label for="floatingPassword">is this plant edible?</label>
    </div>

      <div class="form-floating mb-3">
      <input type="password" class="form-control" id="easy_care" placeholder="Password">
      <label for="floatingPassword">is this plant easy to care for?</label>
    </div>

      <div class="form-floating mb-3">
      <input type="password" class="form-control" id="water_needed" placeholder="Password">
      <label for="floatingPassword">how often does this plant need water?</label>
    </div>

      <div class="form-floating mb-3">
      <input type="password" class="form-control" id="growth_rate" placeholder="Password">
      <label for="floatingPassword">how fast does this plant grow?</label>

    <div class="form-floating mb-3">
      <input type="password" class="form-control" id="size" placeholder="Password">
      <label for="floatingPassword">how big is this plant now?</label>
    </div>
    </div>

    <button id="savebtn" type="submit" class="btn btn-primary">create</button>

  </div>