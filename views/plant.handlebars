<div>
    {{body}}
    <div class="plant-card">
        {{#each post as |plants|}}
        <div class="plant-card-header">
            {{plant_name}}
        </div>
        <div class="card-body">
            <p>
                {{description}}
            </p>
            <ol>
                <li>
                    sun: {{sun_requirement}}
                </li>

                <li>
                    water: {{water_requirement}}
                </li>

                <li>
                    easy care: {{easy_care}}
                </li>

                <li>
                    pet safe: {{pet_safe}}
                </li>

                <li>
                    growth rate: {{growth_rate}}
                </li>
                <li>
                    size: {{size}}
                </li>

                <li>
                    edible: {{edible}}
                </li>
            </ol>

            <p>contact: {{user_email}}</p>
        </div>
        {{/each}}
    </div>
</div>